using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class StringController : MonoBehaviour {
	protected AudioSource[] audios;
	protected float upstrumDelay;
	protected float downstrumDelay;
	
	// Start is called before the first frame update
	protected void Start() {
	  	audios = GetComponents<AudioSource>();
	}

	// Update is called once per frame
	void Update() {
		float click = Input.GetAxis("Fire1");
		Debug.Log(click);
		if (Input.GetKeyDown(KeyCode.UpArrow)) {
            //audios[0].Play();
       } else if (Input.GetKeyDown(KeyCode.DownArrow)) {
       }
	}
	
	protected void PlayString(int fret) {
		audios[fret].Play();
	}
	IEnumerator Strum(bool downstrum) {
		print(Time.time);
		if (downstrum) {
			yield return new WaitForSeconds(downstrumDelay);
		} else {
			yield return new WaitForSeconds(downstrumDelay);
		}

		//yield return new WaitForSeconds(downstrum ? downstrumDelay : upstrumDelay
		print(Time.time);


	}
}
